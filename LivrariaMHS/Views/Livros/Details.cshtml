@model LivrariaMHS.Models.Attributes.Livro

<main role="main">
    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6 offset-sm-3">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Detalhes</h4>
                    </header>
                    <article class="card-body">
                        <div class="form-row">
                            <div class="col form-group">
                                <img class="form-group" src="@Url.Action("GetFoto", "Livros", new { id = Model.ID })" style="width:100%">
                            </div>
                        </div>
                        <dl class="row">
                            <dt class="col-sm-4 my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Titulo)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Titulo)
                            </dd>
                            <dt class="col-sm-4 my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Autor.Nome)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Autor.Nome)
                            </dd>
                            <dt class="col-sm-4 my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Paginas)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Paginas)
                            </dd>
                            <dt class="col-sm-4 my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Preco)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Preco)
                            </dd>
                            <dt class="col-sm-4  my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Edicao)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Edicao)
                            </dd>
                            <dt class="col-sm-4 my-2  text-uppercase">
                                @Html.DisplayNameFor(model => model.Ano)
                            </dt>
                            <dd class="col-sm-8 my-2">
                                @Html.DisplayFor(model => model.Ano)
                            </dd>
                        </dl>
                        <hr />
                        <h4>Categoria(s)</h4>
                        <dl class="row">
                            @foreach (var item in Model.LivrosCategorias)
                            {
                                <dt class="col-sm-4 my-1">
                                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                                </dt>
                                <dd class="col-sm-8 my-1">
                                </dd>
                            }
                        </dl>
                        <hr />
                        <div class="form-row">
                            <div class="col form-group">
                                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning btn-lg form-control">Editar</a>
                            </div>
                            <div class="col form-group">
                                <a asp-action="Index" class="btn btn-info btn-lg form-control">Voltar</a>
                            </div>
                        </div>
                    </article>
                </div>
            </aside>
        </div>
    </section>
    <hr />
</main>