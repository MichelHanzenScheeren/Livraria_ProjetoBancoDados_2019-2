@model LivrariaMHS.Models.Attributes.Livro

@{
    ViewData["Title"] = "DELETAR LIVRO";
}

<p><h1>@ViewData["Title"]</h1></p>
<hr />

<p><h3>Tem certeza que deseja continuar?</h3></p>
<h5 class="text-danger"> Informações apagadas NÃO PODEM ser recuperadas!</h5>
<hr />

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Paginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paginas)
        </dd>
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Edicao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edicao)
        </dd>
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class="col-sm-2 text-uppercase">
            @Html.DisplayNameFor(model => model.Autor.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor.Nome)
        </dd>
    </dl>
    <hr />
    <h4>Categoria(s)</h4>
    <dl class="row">
        @foreach (var item in Model.LivrosCategorias)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </dt>
            <dd class="col-sm-10">
            </dd>
        }
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Deletar" class="btn btn-danger btn-lg" /> &ensp;
        <a asp-action="Index" class="btn btn-info btn-lg">Voltar</a>
    </form>
</div>
