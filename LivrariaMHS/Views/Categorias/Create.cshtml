@model Categoria

<main role="main">
    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6 offset-sm-3">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Nova Categoria</h4>
                    </header>
                    <article class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="col form-group">
                                    <label asp-for="Nome" class="control-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <br />
                            <div class="form-row">
                                <div class="col form-group">
                                    <input type="submit" value="Salvar" class="btn btn-block btn-success btn-lg" />
                                </div>
                            </div>
                        </form>
                    </article>
                </div>
            </aside>
        </div>
    </section>
</main>

        <script>
            $(document).ready(function () {
                $("#productName").autocomplete({
                    source: function (request, response) {
                        $.getJSON("/api/autoComplete/searchCategorias", request, function (data) {
                            response($.map(data, function (item) {
                                return {
                                    label: item
                                }
                            }))
                        })
                    }
                });
            });
        </script>

        @section Scripts
{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
