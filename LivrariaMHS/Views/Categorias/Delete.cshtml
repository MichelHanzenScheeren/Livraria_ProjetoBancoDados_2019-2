@model Categoria

    <main role="main">
        <section class="container" style="margin-top: 50px;">
            <div class="row">
                <aside class="col-sm-6 offset-sm-3">
                    <div class="card">
                        <header class="card-header">
                            <h4 class="card-title mt-2">Deletar Categoria</h4>
                        </header>
                        <article class="card-body">
                            <div class="form-row">
                                <div class="col form-group">
                                    <p><h3>Tem certeza que deseja continuar?</h3></p>
                                    <h5 class="text-danger"> Informações apagadas NÃO PODEM ser recuperadas!</h5>
                                </div>
                            </div>
                            <hr />
                            <dl class="row border-bottom">
                                <dt class="col-sm-3 text-uppercase">
                                    Categoria
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Nome)
                                </dd>
                            </dl>
                            <hr />
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ID" />
                                <a asp-action="Index" class="btn btn-info btn-block btn-lg">Cancelar e Voltar ao Menu</a>
                                <input type="submit" value="Deletar Mesmo Assim" class="btn btn-danger btn-block btn-lg my-4" />
                            </form>
                        </article>
                    </div>
                </aside>
            </div>
        </section>
    </main>
