@model LivrariaMHS.Models.Attributes.Categoria

@{
    ViewData["Title"] = "EDITAR CATEGORIA";
}

<p><h1>@ViewData["Title"]</h1></p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <input type="hidden" asp-for="Nome" name="nomeAntigo" />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning btn-lg" /> &ensp;
                <a asp-action="Index" class="btn btn-info btn-lg">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}