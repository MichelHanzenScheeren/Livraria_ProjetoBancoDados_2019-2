@model Venda

<main role="main">
    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6 offset-sm-3">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Deletar Venda</h4>
                    </header>
                    <article class="card-body">
                        <div class="form-row">
                            <div class="col form-group">
                                <p><h3>Tem certeza que deseja continuar?</h3></p>
                                <h5 class="text-danger"> Informações apagadas NÃO PODEM ser recuperadas!</h5>
                            </div>
                        </div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3 my-2">
                                @Html.DisplayNameFor(model => model.Data)
                            </dt>
                            <dd class="col-sm-9 my-2">
                                @Html.DisplayFor(model => model.Data)
                            </dd>
                            <dt class="col-sm-3 my-2">
                                @Html.DisplayNameFor(model => model.Livro)
                            </dt>
                            <dd class="col-sm-9 my-2">
                                @Html.DisplayFor(model => model.Livro.Titulo)
                            </dd>
                            <dt class="col-sm-3 my-2">
                                @Html.DisplayNameFor(model => model.Cliente)
                            </dt>
                            <dd class="col-sm-9 my-2">
                                @Html.DisplayFor(model => model.Cliente.Nome)
                            </dd>
                            <dt class="col-sm-3 my-2"> </dt>
                            <dd class="col-sm-9 my-2"> </dd>
                            <dt class="col-sm-3 my-2">
                                @Html.DisplayNameFor(model => model.Quantidade)
                            </dt>
                            <dd class="col-sm-9 my-2">
                                @Html.DisplayFor(model => model.Quantidade)
                            </dd>
                            <dt class="col-sm-3 my-2">
                                @Html.DisplayNameFor(model => model.Livro.Preco)
                            </dt>
                            <dd class="col-sm-9 my-2">
                                @Html.DisplayFor(model => model.Livro.Preco)
                            </dd>
                            <dt class="col-sm-3 my-2 border-bottom"> </dt>
                            <dd class="col-sm-9 my-2 border-bottom"> </dd>
                            <dt class="col-sm-3 my-2">
                                Valor Total
                            </dt>
                            <dd class="col-sm-9 my-2">
                                R$ @(Model.Quantidade * Model.Livro.Preco)
                            </dd>
                        </dl>
                        <br />
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ID" />
                            <input type="submit" value="Deletar" class="btn btn-danger btn-block" />
                        </form>
                    </article>
                </div>
            </aside>
        </div>
    </section>
</main>


