@model LivrariaMHS.Models.ViewModels.VendaViewModel
@{
    ViewData["Title"] = "NOVA VENDA";
}


<p><h1>@ViewData["Title"]</h1></p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Venda.Data" class="control-label"></label>
                @Html.TextBoxFor(model => model.Venda.Data, "{0:dd/MM/yyyy HH:mm}", htmlAttributes: new { @class = "form-control date-timepicker" })
                <span asp-validation-for="Venda.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.Quantidade" class="control-label"></label>
                <input asp-for="Venda.Quantidade" class="form-control" />
                <span asp-validation-for="Venda.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.Cliente" class="control-label"></label>
                <select asp-for="Venda.ClienteID" asp-items="@(new SelectList(Model.Clientes, "ID", "Nome"))" class="form-control"><option class="text-secondary" value="" disabled selected hidden>Selecione...</option></select>
                <span asp-validation-for="Venda.ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.Livro" class="control-label"></label>
                <select asp-for="Venda.LivroID" asp-items="@(new SelectList(Model.Livros, "ID", "Titulo"))" class="form-control" id="livroSelecionado"><option class="text-secondary" value="" disabled selected hidden>Selecione...</option></select>
                <span asp-validation-for="Venda.LivroID" class="text-danger"></span>
            </div>
            <hr /><hr />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-lg" /> &ensp;
                <a asp-action="Index" class="btn btn-info btn-lg">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
